-- Exemplos de scripts base de DQL (Data Query Language) para cada comando:

-- SELECT
SELECT coluna1, coluna2
FROM tabela;

-- FROM

SELECT *
FROM tabela;

-- WHERE

SELECT coluna1, coluna2
FROM tabela
WHERE coluna3 = 'valor';

-- JOIN

SELECT t1.coluna1, t2.coluna2
FROM tabela1 t1
JOIN tabela2 t2 ON t1.chave = t2.chave;

-- ORDER BY

SELECT coluna1, coluna2
FROM tabela
ORDER BY coluna1 DESC;

-- GROUP BY

SELECT coluna1, COUNT(*)
FROM tabela
GROUP BY coluna1;

-- HAVING

SELECT coluna1, COUNT(*)
FROM tabela
GROUP BY coluna1
HAVING COUNT(*) > 10;

-- DISTINCT

SELECT DISTINCT coluna1
FROM tabela;

-- LIMIT

SELECT coluna1
FROM tabela
LIMIT 10;

-- Seleção de todos os registros
SELECT *
FROM tabela;

-- Seleção de registros com condição
SELECT coluna1, coluna2
FROM tabela
WHERE condição;

-- Seleção com junção de tabelas
SELECT t1.coluna1, t2.coluna2
FROM tabela1 t1
JOIN tabela2 t2 ON t1.coluna3 = t2.coluna3;
